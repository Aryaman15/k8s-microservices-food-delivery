<!-- views/add-order.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Add Order</title>
  </head>
  <body>
    <h1>Add Order</h1>
    <form action="/add-order" method="POST">
      <div>
        <label>User ID:</label>
        <input type="text" name="userId" required />
      </div>
      <div>
        <label>Restaurant ID:</label>
        <input type="text" name="restaurantId" required />
      </div>
      <div>
        <label>Items (as JSON):</label>
        <textarea
          name="items"
          placeholder='[{"menuItemId": "id1", "quantity": 2}]'
          required
        ></textarea>
      </div>
      <div>
        <label>Delivery Address:</label>
        <input type="text" name="deliveryAddress" required />
      </div>
      <div>
        <label>Total Price:</label>
        <input type="number" name="totalPrice" required />
      </div>
      <button type="submit">Place Order</button>
    </form>
    <p><a href="/">Back to home</a></p>
  </body>
</html>
